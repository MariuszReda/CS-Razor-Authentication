@page
@model Account.RegisterModel

<h1 class="text-info">
    Register
</h1>
<form method="post" role="form">
    <div class="text-danger" asp-validation-summary="All"></div>
    <div class="form-group">
        <label asp-for="@Model.Input.UserName" class="col-md-2"></label>
        <div class="col-md-10">
            <span asp-validation-for="@Model.Input.UserName" class="text-danger"></span>
            <input asp-for="@Model.Input.UserName" class="form-control" />
        </div>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Input.EmailAddress" class="col-md-2"></label>
        <div class="col-md-10">
            <span asp-validation-for="@Model.Input.EmailAddress" class="text-danger"></span>
            <input asp-for="@Model.Input.EmailAddress" class="form-control" />
        </div>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Input.Password" class="col-md-2"></label>
        <div class="col-md-10">
            <span asp-validation-for="@Model.Input.Password" class="text-danger"></span>
            <input asp-for="@Model.Input.Password" class="form-control" />
        </div>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Input.ConfirmPassword" class="col-md-2"></label>
        <div class="col-md-10">
            <span asp-validation-for="@Model.Input.ConfirmPassword" class="text-danger"></span>
            <input asp-for="@Model.Input.ConfirmPassword" class="form-control" />
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-2">
            <button type="submit" class="mt-3 btn btn-success form-control">Register</button>
        </div>
    </div>
</form>